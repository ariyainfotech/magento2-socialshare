<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="AriyaInfoTech\SocialShare\Block\SocialShare" name="mp.SocialShare.InlineTop" template="AriyaInfoTech_SocialShare::socialshare.phtml" before="-">
                <arguments>
                    <argument name="page" xsi:type="string">product_page</argument>
                    <argument name="position" xsi:type="string">top_content</argument>
                    <argument name="type" xsi:type="string">inline</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="content">
            <referenceContainer name="product.info.main">
                <block class="AriyaInfoTech\SocialShare\Block\SocialShare" name="mp.SocialShare.InlineCart" template="AriyaInfoTech_SocialShare::socialshare.phtml">
                    <arguments>
                        <argument name="page" xsi:type="string">under_cart</argument>
                        <argument name="position" xsi:type="string">under_cart</argument>
                        <argument name="type" xsi:type="string">inline</argument>
                    </arguments>
                </block>
            </referenceContainer>
        </referenceContainer>

        <referenceContainer name="content.aside">
            <block class="AriyaInfoTech\SocialShare\Block\SocialShare" name="mp.SocialShare.Float" template="AriyaInfoTech_SocialShare::socialshare.phtml">
                <arguments>
                    <argument name="page" xsi:type="string">product_page</argument>
                    <argument name="position" xsi:type="string">float_position</argument>
                    <argument name="type" xsi:type="string">float</argument>
                </arguments>
            </block>
            <block class="AriyaInfoTech\SocialShare\Block\SocialShare" name="mp.SocialShare.InlineBottom" template="AriyaInfoTech_SocialShare::socialshare.phtml" after="-">
                <arguments>
                    <argument name="page" xsi:type="string">product_page</argument>
                    <argument name="position" xsi:type="string">bottom_content</argument>
                    <argument name="type" xsi:type="string">inline</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
